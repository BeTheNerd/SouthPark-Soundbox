<stephane.castrec.spbox.fragment.DashboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
        android:id="@+id/dash_all"
        style="@style/ButtonText"
        android:background="@drawable/yellowbtn"
        android:drawableTop="@drawable/actions_speaker_icon"
        android:text="@string/dashboard_all" />

    <Button
        android:id="@+id/dash_favorites"
        style="@style/ButtonText"
        android:background="@drawable/yellowbtn"
        android:drawableTop="@drawable/favorites_icon"
        android:text="@string/dashboard_Favorite" />

    <Button
        android:id="@+id/dash_search"
        style="@style/ButtonText"
        android:background="@drawable/yellowbtn"
        android:drawableTop="@drawable/search_icon"
        android:text="@string/dashboard_search" />

    <Button
        android:id="@+id/dash_last"
        style="@style/ButtonText"
        android:background="@drawable/yellowbtn"
        android:drawableTop="@drawable/news"
        android:text="@string/dashboard_lastupdate" />

</stephane.castrec.spbox.fragment.DashboardLayout>